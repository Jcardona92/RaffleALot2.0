<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csudh.jcardona2toromail.rafflealot20.ViewitemsActivity">

    <ImageView
        android:layout_width="210dp"
        android:layout_height="230dp"
        android:id="@+id/View_item1"
        android:src="@drawable/hydroflask"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Hydroflask
            Tck:45
            Type :Dollar
            Date : 04/29/2017
            To 05/15/2017"

        android:layout_below="@+id/View_item1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="44dp"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/View1_purchaseButton"
        android:text="Purchase ticket"
        android:padding="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />


</RelativeLayout>
